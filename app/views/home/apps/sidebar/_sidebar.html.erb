<div class="hidden md:block">
  <div class="fixed bg-white shadow-lg rounded-lg p-4">
    <div class="sidebar-items justify-between items-center">
      <button class="avatar placeholder text-teal-600">
        <div class="bg-neutral text-neutral-content rounded-full w-12">
         <span>SY</span>
        </div>
      </button>
    </div>
    <div class="flex mt-4">
      <%= link_to root_path, class:"sidebar-items hover:underline" do %>
       <%= heroicon_tag "home", variant: :outline, class:"flex h-6 w-6" %>
       <span class="flex ml-4">Accueil</span>
      <% end %>
    </div>
    <div class="mt-4">
      <%= link_to root_path, class:"sidebar-items hover:underline" do %>
       <%= heroicon_tag "bell-alert", variant: :outline, class:"flex h-6 w-6" %>
        <span class="flex ml-4">Notification</span>
      <% end %>
    </div>
    <div class="mt-4">
      <%= link_to "messages", class:"sidebar-items hover:underline" do %>
        <%= heroicon_tag "chat-bubble-oval-left-ellipsis", variant: :outline, class:"flex h-6 w-6" %>
        <span class="flex ml-4">Messages</span>
      <% end %>
    </div>
    <div class="mt-4">
      <%= link_to "new-post", class:"sidebar-items hover:underline" do %>
        <%= heroicon_tag "plus-circle", variant: :outline, class:"flex h-6 w-6" %>
        <span class="flex ml-4">Créer un Post</span>
      <% end %>
    </div>
    <div class="mt-4">
      <%= link_to "new-article", class:"sidebar-items hover:underline" do %>
       <%= heroicon_tag "gift", variant: :outline, class:"flex h-6 w-6" %>
        <span class="flex ml-4">Créer un Media</span>
      <% end %>
    </div>

    <div class="mt-4">
      <%=link_to root_path, class:"sidebar-items hover:underline" do %>
        <%= heroicon_tag "currency-dollar", variant: :outline, class:"flex h-6 w-6 " %>
        <span class="flex ml-4">Devenir Créateur</span>
      <% end %>
    </div>

    <div class="mt-4">
     <%=link_to root_path, class:"sidebar-items hover:underline" do %>
        <%= heroicon_tag "user",variant: :outline, class:"flex h-6 w-6" %>
        <span class="flex ml-4"> Profile</span>
      <% end %>
    </div>
    <div class="mt-4">
      <%=link_to root_path,  class:"sidebar-items hover:underline" do %>
        <%=  heroicon_tag "cog-6-tooth", variant: :outline, class:"flex h-6 w-6" %>
        <span class="flex ml-4">Parametre</span>
      <% end %>
    </div>
    
    <div class="mt-4">
      <%=link_to root_path,class:"sidebar-items hover:underline" do %>
        <%= heroicon_tag "ellipsis-horizontal", variant: :outline, class:"flex h-6 w-6" %>

        <span class="flex ml-4"> Découvre</span>
      <% end %>
    </div>

    <div class="mt-4">
      <%= link_to destroy_user_session_path, method: :delete,
       data:{ turbo_method: :delete}, class:"sidebar-items hover:underline" do %>
       <%= heroicon_tag "arrow-right-start-on-rectangle", variant: :outline, class:"flex h-6 w-6" %>
        <span class="flex ml-4">Se Déconnecter</span>
      <% end %>
    </div>
  </div>
</div>
