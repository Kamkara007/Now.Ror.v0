<% @title="profil" %>

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 border p-4 bg-white">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Completer votre inscription
      </h2>
      
    </div>

      <%= form_for @admin, method: :put, url: wizard_path do |f| %>
    <% if f.object.errors.any? %>
      <div class="error_messages">
        <% f.object.errors.full_messages.each do |error| %>
          <p style="color: red"><%= error %></p>
        <% end %>
      </div>
    <% end %>
    <div>
          <%= f.label :full_name, 'Nom complet', class: "sr-only" %>
          <%= f.text_field :full_name, placeholder: "Ex: Koffi kouassi Amina",
          class: " ln-text-field ln-text-field-focus" , autofocus:true %>
        </div>
    
    <div class="my-5 bg-white p-2 ">
      <%#= avatar_user_omboarding %>
        <br><br>
        <%= f.label :admin_avatar, 'Photo de profile', class:"py-2" %>
        <%= f.file_field :admin_avatar, class: "file-input file-input-bordered  w-full max-w-xs" %>
    </div>

    <div class="my-5 bg-white p-2 ">
      <%#= avatar_user_omboarding %>
        <br><br>
        <%= f.label :admin_banner, 'Photo du mur', class:"py-2" %>
        <%= f.file_field :admin_banner, class: "file-input file-input-bordered  w-full max-w-xs" %>
    </div>    

    <div class="py-2">
      <%= f.label :"un texte introductif", class: "sr-only" %>
      <%= f.text_area :admin_bio, placeholder: "Ex: CEO Appgram", class: "ln-text-field ln-text-field-focus" %>
    </div>

        
    <div class="d-flex flex-row-reverse">
      <%= f.submit 'Terminer', class:"ln-sign" %>
    </div>
  <% end %>  
      
  </div>
</div>
